{
  "mcpServers": {
    "voidlabs-kb": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "--directory",
        "${CLAUDE_PLUGIN_ROOT}",
        "run",
        "python",
        "-m",
        "voidlabs_kb"
      ],
      "env": {
        "KB_ROOT": "${CLAUDE_PLUGIN_ROOT}/kb",
        "INDEX_ROOT": "${CLAUDE_PLUGIN_ROOT}/.indices"
      }
    }
  }
}
